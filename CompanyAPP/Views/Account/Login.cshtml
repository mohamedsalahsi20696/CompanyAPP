@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All" class="text-danger"></div> @* List of whole form error message*@

<div class="agileits-top">
    <form asp-action="Login" method="post">

        <div class="form-group">
            <label class="col-form-label" asp-for="Email"></label>
            <input class="form-control email" asp-for="Email" placeholder="E-mail">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="wthree-text">
            <label class="anim">
                <input asp-for="RememberMe" class="checkbox">
                <span>Remember Me</span>
            </label>
            <div class="clear"> </div>
        </div>
        <input type="submit" value="SIGNIN">
    </form>
    <p>Don't have an Account? <a asp-action="Register">Register Now!</a></p>
    <p><a asp-action="ForgetPassword">Forget Password!</a></p>
</div>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial"></partial>
}

