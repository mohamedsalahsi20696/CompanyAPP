@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<br />
<br />

<div class="row justify-content-center align-items-center">
    <form class="col-8">
        <div class="row">
            <div class="col-8">
                <input type="text" class="form-control" name="email" placeholder="Search By Email" />
            </div>
            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u=>u.Id)</th>
                <th>@Html.DisplayNameFor(u=>u.FName)</th>
                <th>@Html.DisplayNameFor(u=>u.LName)</th>
                <th>@Html.DisplayNameFor(u=>u.Email)</th>
                <th>@Html.DisplayNameFor(u=>u.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(u=>u.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FName</td>
                    <td>@item.LName</td>
                    <td>@Html.DisplayFor(e=>item.Email)</td>
                    <td>@Html.DisplayFor(e=>item.PhoneNumber)</td>
                    <td>@string.Join(",",item.Roles)</td>

                    <partial name="_ButtonsPartialView" model="@item.Id"></partial>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Users</h3>
    </div>
}

